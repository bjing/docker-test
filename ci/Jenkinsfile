node('slave-template') {
    stage 'Poll Git'
    git url: 'https://github.com/bjing/docker-test.git', branch: 'brian'
    
    stage "Tag build"
    sh "bash ci/tag.sh"

    stage "Unit Test"
    sh "sudo bash ci/test.sh"

    stage 'Build and Push'
    sh 'sudo bash ci/build-and-push.sh'

    stage 'Deploy'
    sh 'sudo bash ci/deploy.sh'

    stage "Smoke Test"
    sh "sudo bash ci/smoke.sh"
}
